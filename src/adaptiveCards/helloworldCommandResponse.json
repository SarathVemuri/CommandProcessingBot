{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "${title}"
    },
    {
      "type": "TextBlock",
      "text": "${body}",
      "wrap": true
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Execute",
          "verb": "jira",
          "title": "Fetch/Update My Jira Cards"
        },
        {
          "type": "Action.Execute",
          "verb": "jenkins",
          "title": "Jenkins Build"
        },
        {
          "type": "Action.Execute",
          "verb": "holidaylist",
          "title": "Fetch Holiday List"
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4"
}